#!/bin/bash -eu
#
# Handle a Servarr instance event in the debugger.


set -o pipefail
PS4='\${LINENO}+'

$(set | sed -nE "s/^(${servarr_type}_.+)/export \1/p")


main() {
    # checkout=\$(dirname \"\$(dirname \"\$(dirname \"\$(dirname \"\$(dirname \"\$(realpath \"\${0}\")\")\")\")\")\")/prunerr
    # source \"\${checkout}/.venv/bin/activate\"

    export HOME=~hotio/
    source ~hotio/.venv/bin/activate

    python -m pdb \"\$(which prunerr)\" handle \"${servarr_name}\" \"\${@}\"
}


main \"\$@\"
